<div class="container">
<%- model_class = Mentor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

  <div class="row">


<div class="col-md-2">
  <div class="form-group">
  <%= link_to 'Add a New Mentor',new_mentor_path, :class => 'btn btn-success' %>
  </div>
</div>


<div class="col-md-6 col-md-offset-4">
<%= search_form_for @search do |f| %>
  <div class="form-group">
    <div class="col-md-offset-3 col-lg-5">
    <%= f.search_field :industry_cont, :class => 'form-control' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Search by Industry", :class => 'btn btn-default' %>
  </div>
<% end %>
</div>


</div>


<br />
<br />
<br />



<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:industry) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        
        <td><%= mentor.name %></td>
        <td><%= mentor.email %></td>
        <td><%= mentor.industry %></td>
        <td><%= mentor.country %></td>
        <td><%= mentor.description %></td>
        
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mentor_path(mentor), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mentor_path(mentor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>