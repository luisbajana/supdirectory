                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#"><%= image_tag "logo.png" %></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <li class="<%= 'active' if current_page?('/startups') %>"><a href="/startups">Startups</a></li>
                <li class="<%= 'active' if current_page?('/staff') %>"><a href="/staff">Staff</a></li>
                <li class="<%= 'active' if current_page?('/outsource') %>"><a href="/outsource">Outsource</a></li>
                <li class="<%= 'active' if current_page?('/mentors') %>"><a href="/mentors">Mentors</a></li>
                <li class="<%= 'active' if current_page?('/contacts') %>"><a href="/contacts">Contacts</a></li>
              </ul>
            </div>
          </div>
    </nav>


<%= yield %>


  <br />
  <br />
  <br />
  <br />

  <div class="container">
    <footer class="footer" style="padding-top: 19px; color: #777; border-top: 1px solid #e5e5e5">
