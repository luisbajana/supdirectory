<%- model_class = Startup -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:startup_name) %>:</strong></dt>
  <dt><strong><%= model_class.human_attribute_name(:generation) %>:</strong></dt>
  
  <dd><%= @startup.startup_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_name) %>:</strong></dt>
  <dd><%= @startup.contact_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @startup.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:industry) %>:</strong></dt>
  <dd><%= @startup.industry %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tribe) %>:</strong></dt>
  <dd><%= @startup.tribe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @startup.country %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              startups_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_startup_path(@startup), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              startup_path(@startup),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
